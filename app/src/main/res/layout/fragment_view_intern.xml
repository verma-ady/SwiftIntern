<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swiftintern.Fragment.ViewIntern"
    android:background="#E0E0E0">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearlayout_header"
            android:background="#9FA8DA"
            android:elevation="10dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageView_viewIntern_company"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="15dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_name"
                    android:text=""
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:elevation="15dp"/>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:elevation="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:background="#ffffff">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relative_personal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_personal"
                        android:text="Details"
                        android:textStyle=""
                        android:textColor="#6D4C41"
                        android:elevation="5dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:textSize="15sp"/>

                    <View
                        android:layout_width="55dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="3dp"
                        android:elevation="5dp"
                        android:layout_below="@id/text_personal"
                        android:background="@android:color/darker_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_title"
                        android:orientation="horizontal"
                        android:layout_below="@+id/text_personal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:elevation="3dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_title"
                            android:text="Title : "
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_title_name"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:text=""
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:elevation="5dp"
                        android:layout_below="@id/linear_title"
                        android:background="#757575"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_eligibility"
                        android:orientation="horizontal"
                        android:layout_below="@+id/linear_title"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:elevation="3dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_eligibility"
                            android:text="Eligibility : "
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_eligibility_name"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:text=""
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:elevation="5dp"
                        android:layout_below="@id/linear_eligibility"
                        android:background="#757575"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_category"
                        android:orientation="horizontal"
                        android:layout_below="@+id/linear_eligibility"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:elevation="3dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_category"
                            android:text="Category : "
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_category_name"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:text=""
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:elevation="5dp"
                        android:layout_below="@id/linear_category"
                        android:background="#757575"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_duration"
                        android:orientation="horizontal"
                        android:layout_below="@+id/linear_category"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:elevation="3dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_duration"
                            android:text="Duration : "
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_duration_name"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:text=""
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:elevation="5dp"
                        android:layout_below="@id/linear_duration"
                        android:background="#757575"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_location"
                        android:orientation="horizontal"
                        android:layout_below="@+id/linear_duration"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:elevation="3dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_location"
                            android:text="Location : "
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_location_name"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:text=""
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:elevation="5dp"
                        android:layout_below="@id/linear_location"
                        android:background="#757575"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_payment"
                        android:orientation="horizontal"
                        android:layout_below="@+id/linear_location"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="3dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_payment"
                            android:text="Stipend : "
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_payment_name"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:text=""
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:elevation="5dp"
                        android:layout_below="@id/linear_payment"
                        android:background="#757575"/>
                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_viewintern_apply"
                    android:text="Upload Resume"
                    android:theme="@style/ThemeOverlay.MyLightButton" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>
