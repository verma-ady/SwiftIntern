<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="#E0E0E0">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycle_app"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:elevation="10dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cards_view_app"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="30dp"
        android:focusable="true"
        android:clickable="true"
        android:contentDescription="false">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:elevation="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_card_app_org"
                    android:text="org"
                    android:textSize="25sp"
                    android:textColor="#6D4C41"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_card_app_sta"
                    android:text="cat"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="2dp"
                    android:paddingRight="5dp"
                    android:layout_below="@id/text_card_app_org"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_app_cat"
                    android:orientation="horizontal"
                    android:layout_below="@+id/text_card_app_sta"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="3dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_app_cat"
                        android:text="Category : "
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text__app_cat_name"
                        android:textSize="20sp"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:textColor="#6D4C41"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_app_loc"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linear_app_cat"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="3dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_app_Loc"
                        android:text="Location : "
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_app_Loc_name"
                        android:textSize="20sp"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:textColor="#6D4C41"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_app_sti"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linear_app_loc"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="3dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_app_sti"
                        android:text="Stipend : "
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_app_sti_name"
                        android:textSize="20sp"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:textColor="#6D4C41"/>
                </LinearLayout>


            </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>